<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Todo_Recycler_View"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_view_height"
        app:layout_constraintBottom_toTopOf="@+id/Add_Task_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/Add_Task_Button"
        android:layout_width="@dimen/list_item_width"
        android:layout_height="@dimen/task_button_height"
        android:backgroundTint="@color/accent_button_colour"
        android:text="@string/add_task_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Todo_Recycler_View" />

</androidx.constraintlayout.widget.ConstraintLayout>